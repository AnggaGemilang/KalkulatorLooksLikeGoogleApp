<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <EditText
        android:id="@+id/operasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:inputType="textAutoComplete"
        android:backgroundTint="@android:color/white"
        android:gravity="right"
        android:ellipsize="end"
        android:paddingTop="50dp"
        android:maxLength="9"
        android:textDirection="rtl"
        android:paddingRight="20dp"
        android:descendantFocusability="beforeDescendants"
        android:soundEffectsEnabled="true"
        android:text=""
        android:textSize="60sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints,RtlCompat" />
<!--        <requestFocus />-->
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/hasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="50dp"
        android:paddingRight="25dp"
        android:gravity="end"
        android:text=""
        android:textColor="#A5A5A5"
        android:background="@android:color/white"
        android:textAlignment="textEnd"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@+id/operasi" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:columnCount="3"
        android:rowCount="4"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/hasil"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/no7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:onClick="onClickNomor"
            android:text="7"
            android:textSize="35sp" />

        <Button
            android:id="@+id/no8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:onClick="onClickNomor"
            android:text="8"
            android:textSize="35sp" />

        <Button
            android:id="@+id/no9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:onClick="onClickNomor"
            android:text="9"
            android:textSize="35sp" />


        <Button
            android:id="@+id/no4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:onClick="onClickNomor"
            android:text="4"
            android:textSize="35sp" />

        <Button
            android:id="@+id/no5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:onClick="onClickNomor"
            android:text="5"
            android:textSize="35sp" />

        <Button
            android:id="@+id/no6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:onClick="onClickNomor"
            android:text="6"
            android:textSize="35sp" />

        <Button
            android:id="@+id/no1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:onClick="onClickNomor"
            android:text="1"
            android:textSize="35sp" />

        <Button
            android:id="@+id/no2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:onClick="onClickNomor"
            android:text="2"
            android:textSize="35sp" />

        <Button
            android:id="@+id/no3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:onClick="onClickNomor"
            android:text="3"
            android:textSize="35sp" />

        <Button
            android:id="@+id/no0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:onClick="onClickNomor"
            android:text="0"
            android:textSize="35sp" />

        <Button
            android:id="@+id/charDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:onClick="onClickNomor"
            android:text="."
            android:textSize="35sp" />

        <Button
            android:id="@+id/charSamaDengan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:onClick="onClickSamaDengan"
            android:text="="
            android:textSize="35sp" />

    </GridLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="#BABABA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hasil"
        app:layout_constraintRight_toLeftOf="@+id/gridLayout1"
        app:layout_constraintLeft_toRightOf="@+id/gridLayout"/>

<!--    <View-->
<!--        android:id="@+id/divider1"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="1dp"-->
<!--        android:background="@android:color/black"-->
<!--        app:layout_constraintBottom_toTopOf="@+id/gridLayout"-->
<!--        tools:ignore="MissingConstraints" />-->

    <GridLayout
        android:id="@+id/gridLayout1"
        app:layout_constraintLeft_toRightOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/hasil"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:columnCount="1"
        android:rowCount="5"
        android:orientation="vertical">

        <Button
            android:id="@+id/charHapus"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:text="c"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />

        <Button
            android:id="@+id/charBagi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:onClick="onClickOperator"
            android:text="/"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />

        <Button
            android:id="@+id/charKali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:onClick="onClickOperator"
            android:text="x"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />

        <Button
            android:id="@+id/charKurang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:onClick="onClickOperator"
            android:text="-"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />

        <Button
            android:id="@+id/charTambah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:onClick="onClickOperator"
            android:text="+"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>